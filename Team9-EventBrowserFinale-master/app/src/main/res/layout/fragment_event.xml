<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">


    <Button
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/webButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web"
        android:layout_above="@+id/mapButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/nivPoster"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:padding="1px"
        android:cropToPadding="true"
        android:src="@drawable/loader"
        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/fragment_event_name"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Event Title"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/fragment_event_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="City"
        android:layout_below="@+id/nivPoster"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"/>

    <TextView
        android:id="@+id/fragment_event_description"
        android:layout_width="250dp"
        android:layout_height="68dp"
        android:textStyle="italic"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Description"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/fragment_event_city"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>